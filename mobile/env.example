# ============================================
# Drug Traceability Mobile App - Environment Variables
# ============================================
# 
# Copy this file to .env and update with your actual values
# 
# IMPORTANT: Never commit .env file to version control!
# Add .env to .gitignore

# ============================================
# Backend API Configuration
# ============================================

# API Base URL
# For Web: use http://localhost:5000/api
# For Android Emulator: use http://10.0.2.2:5000/api (automatically converted)
# For iOS Simulator: use http://localhost:5000/api
# For Physical Device: use http://YOUR_COMPUTER_IP:5000/api (e.g., http://192.168.1.100:5000/api)
API_BASE_URL=http://localhost:5000/api

# ============================================
# App Configuration
# ============================================

# App Name
APP_NAME=Drug Traceability System

# App Version
APP_VERSION=1.0.0

# Environment Type: dev, staging, prod
ENV_TYPE=dev

# ============================================
# Firebase Configuration (Optional)
# ============================================
# Note: Firebase config is usually handled by firebase_options.dart
# These are only needed if you want to override or use custom values

# FIREBASE_PROJECT_ID=your-project-id
# FIREBASE_API_KEY=your-api-key

# ============================================
# Feature Flags (Optional)
# ============================================

# Enable/Disable features
# ENABLE_BIOMETRIC=true
# ENABLE_OFFLINE_MODE=true
# ENABLE_NOTIFICATIONS=true

# ============================================
# Debug/Development Settings
# ============================================

# Enable debug logging
# DEBUG_MODE=true

# API Request Timeout (milliseconds)
# API_TIMEOUT=30000

